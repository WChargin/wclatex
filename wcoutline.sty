\ProvidesPackage{wcoutline}

\RequirePackage{wccmd}

\RequirePackage{xstring} % for IfSubStr, StrRight

\RequirePackage{outlines}
\RequirePackage{enumitem}


\newcommand{\summary}[2]{%
  \textsc{#1%
    % extract last character; add period if not punctuation
    \StrRight{#1}{1}[\@@lastchar]\IfSubStr{.?!'}{\@@lastchar}\relax{.}%
  } #2\unskip%
}

\newcommand{\@outline@begin}{%
  \setenumerate[1]{label=\Roman*.}
  \setenumerate[2]{label=\Alph*.}
  \setenumerate[3]{label=\arabic*.}
  \setenumerate[4]{label=\alph*.}
  \setenumerate[5]{label=\roman*.}
}
\newenvironment{wcoutline}{\begin{outline}[enumerate]\@outline@begin}{\end{outline}}
