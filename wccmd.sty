\ProvidesPackage{wccmd}

% Definitions and such.
% Usage:
%  A \noun{foobar} is a rare species of...
\newcommand{\noun}[1]{\textbf{#1}}

% Referring to words as words.
% Usage:
%  When we say \word{foobar}, we really mean...
%  The word \word{quxbaz} is unique in its...
\newcommand{\word}[1]{\emph{#1}}

% Using foreign words.
% Usage:
%  The word \word{sincere} comes from the Latin \foreignword{sin cera}...
\newcommand{\foreignword}[1]{\emph{#1}}

% Referring to literary works.
% Usage:
%  Shakespeare's \work{Hamlet} is the classic...
\newcommand{\work}[1]{\emph{#1}}

% Course number and assignment title combo.
% Usage:
%  \title{\coursetitle{CSC 101}{Homework 1}}
\newcommand{\coursetitle}[2]{#1: #2}

% Simple note header setup.
% Usage:
%   \classnotes{1 January 1970}
\newcommand{\classnotes}[1]{%
  \title{Class Notes: #1}%
  \author{William Chargin}%
  \date{}% % omit superfluous date
  % Add more theorem environments
  \newtheorem*{remark}{Remark}
  \newtheorem*{proposition}{Proposition}
  \newtheorem*{fact}{Fact}
  \newtheorem*{example}{Example}
  \newenvironment{solution}{\begin{proof}[Solution]}{\end{proof}}
  \let\old@maketitle\maketitle
  \newif\if@wc@madetitle
  \@wc@madetitlefalse
  \renewcommand\maketitle{%
    \if@wc@madetitle\else
    \old@maketitle\@wc@madetitletrue\fi
  }
  \AtBeginDocument{\maketitle}
}

\newcommand{\taxon}[1]{\emph{#1}}
